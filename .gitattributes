########################################
# Unity Recommended .gitattributes
# Medium Level (2D/3D Project)
########################################

# Normalize line endings
* text=auto

# =============================
# Unity YAML Assets (Text, Mergeable)
# =============================

*.meta text merge=unityyamlmerge
*.unity text merge=unityyamlmerge
*.asset text merge=unityyamlmerge
*.prefab text merge=unityyamlmerge
*.mat text merge=unityyamlmerge
*.anim text merge=unityyamlmerge
*.controller text merge=unityyamlmerge
*.overrideController text merge=unityyamlmerge
*.physicMaterial text merge=unityyamlmerge
*.physicsMaterial2D text merge=unityyamlmerge
*.playable text merge=unityyamlmerge
*.mask text merge=unityyamlmerge
*.brush text merge=unityyamlmerge
*.flare text merge=unityyamlmerge
*.fontsettings text merge=unityyamlmerge
*.guiskin text merge=unityyamlmerge
*.giparams text merge=unityyamlmerge
*.renderTexture text merge=unityyamlmerge
*.spriteatlas text merge=unityyamlmerge
*.terrainlayer text merge=unityyamlmerge
*.mixer text merge=unityyamlmerge
*.shadervariants text merge=unityyamlmerge
*.preset text merge=unityyamlmerge

# Assembly definitions (text but NOT merged)
*.asmdef text -merge

# =============================
# Binary Files (Use LFS)
# =============================

# Images
*.png filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.tga filter=lfs diff=lfs merge=lfs -text
*.psd filter=lfs diff=lfs merge=lfs -text
*.bmp filter=lfs diff=lfs merge=lfs -text
*.tif filter=lfs diff=lfs merge=lfs -text
*.tiff filter=lfs diff=lfs merge=lfs -text

# Audio
*.wav filter=lfs diff=lfs merge=lfs -text
*.mp3 filter=lfs diff=lfs merge=lfs -text
*.ogg filter=lfs diff=lfs merge=lfs -text

# Video
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.mov filter=lfs diff=lfs merge=lfs -text
*.avi filter=lfs diff=lfs merge=lfs -text

# Models
*.fbx filter=lfs diff=lfs merge=lfs -text
*.obj filter=lfs diff=lfs merge=lfs -text
*.blend filter=lfs diff=lfs merge=lfs -text
*.glb filter=lfs diff=lfs merge=lfs -text

# Other large binary
*.zip filter=lfs diff=lfs merge=lfs -text
*.7z filter=lfs diff=lfs merge=lfs -text
*.rar filter=lfs diff=lfs merge=lfs -text


########################################
# End of file
